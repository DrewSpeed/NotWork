{{!-- USER SIGN-UP --}}
<h4 class="text-center suinfo">Let's get your information</h4>
<form class="signup-form">
  <div>
    <label for="username-signup">username</label>
    <input type="text" id="username-signup" autocomplete="on" />
  </div>
  <div>
    <label for="email-signup">email:</label>
    <input type="text" id="email-signup" autocomplete="on" />
  </div>
  <div>
    <label for="password-signup">password</label>
    <input type="password" id="password-signup" autocomplete="on" />
  </div>
  <div>
    <button type="submit">SIGNUP</button>
  </div>
</form>

<a class="aha" href="/login">Already have an account?</a>

<script src="/javascript/signup.js"></script>