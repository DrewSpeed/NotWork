<article class="post callout primary">
  <div class="title">
    <span><a href="/posts/{{id}}">{{title}}</a></span>
    <span style="float: right">Posted by {{user.username}} on {{format_date created_at}}</span><br>
    <span style="float: right">{{comments.length}} {{format_plural "comment" comments.length}}</span>
  </div>
  <div class="text-area">
    <p>{{text}}</p>
  </div>
</article>